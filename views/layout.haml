!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title Cardea

    %link{href: url('/css/bootstrap.min.css'), rel: "stylesheet"}

    /[if lt IE 9]
      %script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
      %script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")

  %body
    .container
      .row
        .col-sm-7.col-md-6(style="text-align: center")
          %img{src: url('/img/cardea-max-600.png'), alt: "Cardea"}
        .col-sm-5.col-md-6
          %h1 Cardea
          != yield

      %footer
        %a(href="https://github.com/3ofcoins/cardea/") Cardea
        version
        = Cardea::VERSION

        - if settings.company_name
          Running for
          - if settings.company_url
            %a{href: settings.company_url}= settings.company_name
          - else
            = settings.company_name

    %script{src: url('/js/jquery-2.0.3.min.js')}
    %script{src: url('/js/bootstrap.min.js')}
